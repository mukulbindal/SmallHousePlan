<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smallhouseplan.calculator" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Small House Plan</name>
    <description>
        The app for estimation of building and repair material for a house or office.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Pawan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="facebook:*" />
    <allow-intent href="market:*" />
    <icon density="hdpi" platform="android" src="res/drawable-hdpi/logo.png" />
    <icon density="ldpi" platform="android" src="res/drawable-ldpi/logo.png" />
    <icon density="mdpi" platform="android" src="res/drawable-mdpi/logo.png" />
    <icon density="xhdpi" platform="android" src="res/drawable-xhdpi/logo.png" />
    <icon density="xxhdpi" platform="android" src="res/drawable-xxhdpi/logo.png" />
    <icon density="xxxhdpi" platform="android" src="res/drawable-xxxhdpi/logo.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
